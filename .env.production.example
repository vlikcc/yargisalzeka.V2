# .env.production.example
# Copy this file to `.env.production` locally and fill real values. Do NOT commit `.env.production`.

# Global secrets
JWT_KEY=<generate-64-byte-base64>
GEMINI_API_KEY=<set-in-k8s-secret>
DB_PASSWORD=<set-in-k8s-secret>
OPENSEARCH_PASSWORD=<set-in-k8s-secret>

# PostgreSQL
POSTGRES_DB=yargisalzeka
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${DB_PASSWORD}

# JWT (issuer/audience – dış dünya için API Gateway URL’niz)
JWT_ISSUER=https://yargisalzeka.com
JWT_AUDIENCE=https://yargisalzeka.com

# Microservice base URLs (in-cluster)
SubscriptionService__BaseUrl=http://subscriptionservice:5002
SearchService__BaseUrl=http://searchservice:5004

# Health
HealthChecks__Enabled=true

# DB init behavior in prod
Database__EnsureCreated=false

# ASP.NET environment
ASPNETCORE_ENVIRONMENT=Production
